void Open_PaulowniaMall_Win_001()
{
	OPEN_MSG_WIN();
	MSG( QuickTravel );
	SEL_CHK_PAD( 6, 20 );
	SET_MASK( 1 );
	int choice = SEL( PaulowniaMall );
	CLOSE_MSG_WIN();
	switch (choice)
	{
		case 1: // Back Alley
			if(Chk_Access_PaulowniaMall_001_009())
			{
				FADE( 2, 0 );
				FADE_SYNC();
				CALL_FIELD( 8, 9, 0, 0 );
			}
			break;
		case 2:	// Town Map
			if(Chk_Access_PaulowniaMall_001_MAP())
			{
				FADE( 1, 0 );
				FADE_SYNC();
				CALL_MAP( 1 );
			}
			break;
		default:
			break;
	}
}

