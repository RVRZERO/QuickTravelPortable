void OpenPort001()
{
	OPEN_MSG_WIN();
	MSG( QuickTravel );
	SEL_CHK_PAD( 6, 20 );
	int choice = SEL( PortIslandStation );
	CLOSE_MSG_WIN();
	switch(choice)
	{
		case 0: // Port Island Station
			FADE( 2, 0 );
			FADE_SYNC();
			CALL_FIELD( 10, 1, 3, 0 );
			break;
		case 1: // Station Outskirts
			if(ChkPort001_002())
			{
				FADE( 2, 0 );
				FADE_SYNC();
				CALL_FIELD( 10, 2, 0, 0 );
			}
			break;
		case 2: // Town Map
			if(ChkPort001_MAP())
			{
				FADE( 1, 0 );
				FADE_SYNC();
				CALL_MAP( 2 );
			}
			break;
		case 3: // Cancel
			break;
		default:
			break;
	}
}

