void Open_IwatodaiStation_Win_001()
{
	OPEN_MSG_WIN();
	MSG( QuickTravel );
	SEL_CHK_PAD( 6, 20 );
	SET_MASK( 6 );
	int choice = SEL( IwatodaiStation );
	CLOSE_MSG_WIN();
	switch(choice)
	{
		case 0: // Iwatodai Station
			if(Chk_Access_IwatodaiStation_001_002())
			{
				FADE( 2, 0 );
				FADE_SYNC();
				CALL_FIELD( 9, 2, 0, 0 );
			}
			break;
		case 3: // Strip Mall, 2F
			if(Chk_Access_IwatodaiStation_001_007())
			{
				FADE( 2, 0 );
				FADE_SYNC();
				CALL_FIELD( 9, 7, 0, 0 );
			}
			break;
		case 4: // Town map
			if(Chk_Access_IwatodaiStation_001_MAP())
			{
				FADE( 1, 0 );
				FADE_SYNC();
				CALL_MAP( 3 );
			}
			break;
		default:
			break;
	}
}

